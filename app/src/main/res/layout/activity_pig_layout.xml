<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false">

    <rango.tool.androidtool.falling.FallingPathSurfaceView
        android:id="@+id/falling_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <TextView
        android:id="@+id/buy_button"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginBottom="20dp"
        android:background="#DB8E1B"
        android:gravity="center"
        android:text="购买"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/accelerate_btn"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginBottom="20dp"
        android:background="#DB8E1B"
        android:gravity="center"
        android:text="加速"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/buy_button" />

    <rango.tool.androidtool.farm.pig.PigContainerView
        android:id="@+id/pig_container_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D6572D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>